<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 开发环境：控制台输出详细日志 -->
    <springProfile name="dev">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>

        <!-- 应用日志 -->
        <logger name="com.adminplus" level="DEBUG"/>

        <!-- Spring Security 日志 -->
        <logger name="org.springframework.security" level="DEBUG"/>

        <!-- Hibernate SQL 日志 -->
        <logger name="org.hibernate.SQL" level="DEBUG"/>
        <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/>

        <!-- Spring Boot 启动日志 -->
        <logger name="org.springframework.boot" level="DEBUG"/>
        <logger name="org.springframework.boot.context" level="DEBUG"/>
        <logger name="org.springframework.boot.autoconfigure" level="DEBUG"/>
    </springProfile>

    <!-- 生产环境：控制台输出简洁日志 -->
    <springProfile name="prod">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
                <charset>UTF-8</charset>
            </encoder>
        </appender>

        <root level="WARN">
            <appender-ref ref="CONSOLE"/>
        </root>

        <logger name="com.adminplus" level="WARN"/>
        <logger name="org.springframework.security" level="ERROR"/>
        <logger name="org.hibernate.SQL" level="ERROR"/>
    </springProfile>

    <!-- 默认配置 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <logger name="com.adminplus" level="INFO"/>
</configuration>